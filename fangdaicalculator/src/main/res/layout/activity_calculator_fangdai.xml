<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_white"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_blue"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <ImageButton
                android:id="@+id/nav_back"
                style="?actionButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="房贷计算器"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/back_white"
                android:textSize="@dimen/_18sp" />
        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:background="@color/back_white"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/cv_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_loan_method"
                    style="@style/list_select_item_title"
                    android:text="贷款方式：" />

                <com.flyco.tablayout.SegmentTabLayout
                    android:id="@+id/stl_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_toEndOf="@id/tv_loan_method"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    tl:tl_bar_color="#ffffff"
                    tl:tl_indicator_anim_enable="true"
                    tl:tl_indicator_color="@color/text_pink"
                    tl:tl_indicator_margin_bottom="2dp"
                    tl:tl_indicator_margin_left="2dp"
                    tl:tl_indicator_margin_right="2dp"
                    tl:tl_indicator_margin_top="2dp"
                    tl:tl_textBold="SELECT" />

            </RelativeLayout>

            <View style="@style/div_thin_style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_calculator_method"
                    style="@style/list_select_item_title"
                    android:text="计算方式：" />

                <com.flyco.tablayout.SegmentTabLayout
                    android:id="@+id/stl_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_toEndOf="@id/tv_calculator_method"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    tl:tl_bar_color="#ffffff"
                    tl:tl_indicator_anim_enable="true"
                    tl:tl_indicator_color="@color/text_pink"
                    tl:tl_indicator_margin_bottom="2dp"
                    tl:tl_indicator_margin_left="2dp"
                    tl:tl_indicator_margin_right="2dp"
                    tl:tl_indicator_margin_top="2dp"
                    tl:tl_textBold="SELECT" />

            </RelativeLayout>

            <View style="@style/div_thin_style" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_repayment_method"
                    style="@style/list_select_item_title"
                    android:text="还款方式：" />

                <com.flyco.tablayout.SegmentTabLayout
                    android:id="@+id/stl_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_toEndOf="@id/tv_repayment_method"
                    android:paddingLeft="@dimen/_10dp"
                    android:paddingRight="@dimen/_10dp"
                    tl:tl_bar_color="#ffffff"
                    tl:tl_indicator_anim_enable="true"
                    tl:tl_indicator_color="@color/text_pink"
                    tl:tl_indicator_margin_bottom="2dp"
                    tl:tl_indicator_margin_left="2dp"
                    tl:tl_indicator_margin_right="2dp"
                    tl:tl_indicator_margin_top="2dp"
                    tl:tl_textBold="SELECT" />

            </RelativeLayout>

            <View style="@style/div_height_style" />
            <!--.................................................................................-->


            <!--房屋总额 显示-->
            <LinearLayout
                android:id="@+id/ll_house_price"
                style="@style/ll_item_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_item_title"
                        android:text="房屋总价：" />

                    <EditText
                        android:id="@+id/et_house_price"
                        style="@style/et_number_style" />

                    <TextView
                        android:id="@+id/tv_money_unit"
                        style="@style/tv_unit_style"
                        android:text="(万元)" />
                </LinearLayout>

                <View style="@style/div_thin_style" />
            </LinearLayout>

            <!--贷款总额 显示-->
            <LinearLayout
                android:id="@+id/ll_loan_price"
                style="@style/ll_item_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_item_title"
                        android:text="贷款总额：" />

                    <EditText
                        android:id="@+id/et_loan_price"
                        style="@style/et_number_style" />

                    <TextView
                        android:id="@+id/tv_loan_unit"
                        style="@style/tv_unit_style"
                        android:text="(万元)" />
                </LinearLayout>

                <View style="@style/div_thin_style" />
            </LinearLayout>


            <!--房子面积  ：房屋尺寸-->
            <LinearLayout
                android:id="@+id/ll_house_measure"
                style="@style/ll_item_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_item_title"
                        android:text="房屋总面积：" />

                    <EditText
                        android:id="@+id/et_house_measure"
                        style="@style/et_number_style" />

                    <TextView
                        android:id="@+id/tv_house_measure_unit"
                        style="@style/tv_unit_style"
                        android:text="(平方米)" />
                </LinearLayout>

                <View style="@style/div_thin_style" />
            </LinearLayout>

            <!--每平米价-->
            <LinearLayout
                android:id="@+id/ll_house_per_price"
                style="@style/ll_item_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_item_title"
                        android:text="每平米单价：" />

                    <EditText
                        android:id="@+id/et_house_per_price"
                        style="@style/et_number_style" />

                    <TextView
                        android:id="@+id/tv_house_per_price_unit"
                        style="@style/tv_unit_style"
                        android:text="(元/平方米)" />
                </LinearLayout>

                <View style="@style/div_height_style" />
            </LinearLayout>
            <!--贷款比率-->
            <LinearLayout
                android:id="@+id/ll_loan_ratio"
                style="@style/ll_item_style"

                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_lro"
                        style="@style/list_item_title"
                        android:text="贷款比例：" />

                    <EditText
                        android:id="@+id/et_loan_ratio"
                        style="@style/et_select_number_style"
                        android:layout_toRightOf="@+id/tv_lro"
                        android:text="70" />

                    <TextView
                        style="@style/rate_unit_style"
                        android:layout_toEndOf="@id/et_loan_ratio"
                        android:text="%" />

                    <TextView
                        android:id="@+id/tv_loan_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toLeftOf="@id/iv_arrow_1"
                        android:maxEms="8"
                        android:text="房屋总价的70%" />


                    <ImageView
                        android:id="@+id/iv_arrow_1"
                        style="@style/iv_arrow_style" />
                </RelativeLayout>

                <View style="@style/div_thin_style" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_mortgage_year"
                style="@style/ll_item_style"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_my"
                        style="@style/list_item_title"
                        android:text="按揭年数：" />

                    <EditText
                        android:id="@+id/et_mortgage_year"
                        style="@style/et_select_number_style"
                        android:layout_toEndOf="@+id/tv_my"
                        android:text="20" />

                    <TextView
                        style="@style/rate_unit_style"
                        android:layout_toEndOf="@id/et_mortgage_year"
                        android:text="年" />

                    <TextView
                        android:id="@+id/tv_mortgage_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toLeftOf="@id/iv_arrow_2"
                        android:maxEms="8"
                        android:text="20年（240期）" />

                    <ImageView
                        android:id="@+id/iv_arrow_2"
                        style="@style/iv_arrow_style" />
                </RelativeLayout>

                <View style="@style/div_thin_style" />
                <View
                    android:id="@+id/div"
                    style="@style/div_height_style" />
            </LinearLayout>




            <!--公积金 贷款总额 显示-->
            <LinearLayout
                android:id="@+id/ll_loan_price_gjj"
                style="@style/ll_item_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_loan_price_gjj"
                        style="@style/list_item_title"
                        android:text="公积金贷总额：" />

                    <EditText
                        android:id="@+id/et_loan_price_gjj"
                        style="@style/et_number_style" />

                    <TextView
                        android:id="@+id/tv_loan_unit_gjj"
                        style="@style/tv_unit_style"
                        android:text="(万元)" />
                </LinearLayout>

                <View style="@style/div_thin_style" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lending_rate_gjj"
                style="@style/ll_item_style">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_lrg"
                        style="@style/list_item_title"
                        android:layout_width="wrap_content"
                        android:text="公积金利率：" />

                    <EditText
                        android:id="@+id/et_lending_rate_gjj"
                        style="@style/et_select_number_style"
                        android:layout_toRightOf="@+id/tv_lrg"
                        android:text="3.25" />

                    <TextView
                        style="@style/rate_unit_style"
                        android:layout_toEndOf="@id/et_lending_rate_gjj"
                        android:text="%" />

                    <TextView
                        android:id="@+id/tv_lending_rate_gjj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toStartOf="@id/iv_arrow_4"
                        android:maxEms="8"
                        android:text="2018年公积金基准贷款利率" />

                    <ImageView
                        android:id="@+id/iv_arrow_4"
                        style="@style/iv_arrow_style" />
                </RelativeLayout>

                <View style="@style/div_height_style" />
            </LinearLayout>
            <!--商业 贷款总额 显示-->
            <LinearLayout
                android:id="@+id/ll_loan_price_sy"
                style="@style/ll_item_style">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/list_item_title"
                        android:text="商业贷款总额：" />

                    <EditText
                        android:id="@+id/et_loan_price_sy"
                        style="@style/et_number_style" />

                    <TextView
                        android:id="@+id/tv_loan_unit_sy"
                        style="@style/tv_unit_style"
                        android:text="(万元)" />
                </LinearLayout>

                <View style="@style/div_thin_style" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lending_rate_sy"
                style="@style/ll_item_style">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_rs"
                        style="@style/list_item_title"
                        android:text="商业贷利率：" />

                    <EditText
                        android:id="@+id/et_lending_rate_sy"
                        style="@style/et_select_number_style"
                        android:layout_toRightOf="@+id/tv_rs"
                        android:text="4.9" />

                    <TextView
                        style="@style/rate_unit_style"
                        android:layout_toEndOf="@id/et_lending_rate_sy"
                        android:text="%" />

                    <TextView
                        android:id="@+id/tv_lending_rate_sy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_toLeftOf="@id/iv_arrow_5"
                        android:maxEms="8"
                        android:text="2018年商业基础贷款利率" />

                    <ImageView
                        android:id="@+id/iv_arrow_5"
                        style="@style/iv_arrow_style" />
                </RelativeLayout>

                <View style="@style/div_height_style" />
            </LinearLayout>
