<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/base_dimen_6">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/main_blue"

            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="房贷计算器"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title" />

        </android.support.v7.widget.Toolbar>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/base_dimen_10"
        android:background="@color/back_white"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/cv_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_loan_method"
                style="@style/list_item_title"
                android:text="贷款方式：" />

            <View style="@style/div_height_style" />

            <RadioGroup
                android:id="@+id/rg_loan_method"
                style="@style/radio_group_style"
                app:layout_constraintTop_toBottomOf="@id/tv_loan_method">

                <RadioButton
                    android:id="@+id/rb_loan_gongjijin"
                    style="@style/radio_button_style"
                    android:text="公积金贷款" />

                <RadioButton
                    android:id="@+id/rb_loan_shangye"
                    style="@style/radio_button_style"
                    android:text="商业贷款" />

                <RadioButton
                    android:id="@+id/rb_loan_zuhe"
                    style="@style/radio_button_style"
                    android:text="组合贷款" />
            </RadioGroup>

            <View style="@style/div_thin_style" />

            <TextView
                android:id="@+id/tv_calculator_method"
                style="@style/sub_title_style"
                android:text="计算方式："
                app:layout_constraintTop_toBottomOf="@id/rg_loan_method" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RadioGroup
                android:id="@+id/rg_calculator_method"
                style="@style/radio_group_style"
                app:layout_constraintTop_toBottomOf="@id/tv_calculator_method">

                <RadioButton
                    android:id="@+id/rb_calculator_method_hours_price"
                    style="@style/radio_button_style"
                    android:text="按房价总额" />

                <RadioButton
                    android:id="@+id/rb_calculator_method_lending_total"
                    style="@style/radio_button_style"
                    android:layout_width="0dp"
                    android:text="按贷款总额" />

                <RadioButton
                    android:id="@+id/rb_calculator_method_hours_measure"
                    style="@style/radio_button_style"
                    android:text="按房屋面积" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_10"
                android:background="@color/back_tint_grey" />

            <TextView
                android:id="@+id/tv_repayment_method"
                style="@style/sub_title_style"
                android:text="还款方式："
                app:layout_constraintTop_toBottomOf="@id/rg_calculator_method" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RadioGroup
                android:id="@+id/rg_repayment_method"
                style="@style/radio_group_style"
                app:layout_constraintTop_toBottomOf="@id/tv_repayment_method">
                <!--等额本息-->
                <RadioButton
                    android:id="@+id/rb_repayment_method_interest"
                    style="@style/radio_button_style"
                    android:text="等额本息" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/base_dimen_10"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/base_dimen_6"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_small" />
                <!--等额本金-->
                <RadioButton
                    android:id="@+id/rb_repayment_method_principal"
                    style="@style/radio_button_style"
                    android:text="等额本金" />
            </RadioGroup>

            <View style="@style/div_height_style" />


            <RelativeLayout
                android:id="@+id/rl_hours_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/base_dimen_10"
                android:padding="@dimen/base_dimen_5"
                app:layout_constraintTop_toBottomOf="@id/rg_repayment_method">

                <TextView
                    android:id="@+id/tv_hours_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="房屋总价：" />

                <EditText
                    android:id="@+id/et_hours_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_money_unit"
                    android:background="@null"
                    android:hint="100" />

                <TextView
                    android:id="@+id/tv_money_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="万元" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RelativeLayout
                android:id="@+id/rl_hours_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/base_dimen_10"
                android:layout_marginLeft="@dimen/base_dimen_5"
                android:layout_marginStart="@dimen/base_dimen_5"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:padding="@dimen/base_dimen_5">

                <TextView
                    android:id="@+id/tv_hours_measure"
                    style="@style/sub_title_style"
                    android:text="房屋面积：" />

                <EditText
                    android:id="@+id/et_hours_measure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_hours_measure_unit"
                    android:background="@null"
                    android:hint="100" />

                <TextView
                    android:id="@+id/tv_hours_measure_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="平方米" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RelativeLayout
                android:id="@+id/rl_hours_per_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_hours_per_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="每平米价：" />

                <EditText
                    android:id="@+id/et_hours_per_price"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/tv_hours_per_price_unit"
                    android:hint="100" />

                <TextView
                    android:id="@+id/tv_hours_per_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="元/平方米" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RelativeLayout
                android:id="@+id/rl_loan_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_loan_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="贷款比例：" />

                <EditText
                    android:id="@+id/tv_loan_ratio_show"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/iv_arrow_1"
                    android:hint="100" />

                <ImageView
                    android:id="@+id/iv_arrow_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RelativeLayout
                android:id="@+id/rl_mortgage_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_mortgage_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="按揭年数：" />

                <EditText
                    android:id="@+id/tv_mortgage_year_show"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/iv_arrow_2"
                    android:hint="100" />

                <ImageView
                    android:id="@+id/iv_arrow_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <RelativeLayout
                android:id="@+id/rl_lending_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_lending_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="贷款利率：" />

                <EditText
                    android:id="@+id/tv_lending_rate_show"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_toLeftOf="@+id/iv_arrow_3"
                    android:hint="100" />

                <ImageView
                    android:id="@+id/iv_arrow_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_1"
                android:background="@color/back_tint" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="开始计算" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>