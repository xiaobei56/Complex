    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.gridlife.xiaobei.fangdaicalculator.activities.MainActivity">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tl_2"
