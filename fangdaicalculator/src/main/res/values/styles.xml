<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="me_function_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/_15dp</item>
        <item name="android:paddingLeft">@dimen/_15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    <style name="me_function_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/_15dp</item>
    </style>
    <style name="me_div_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:layout_marginStart">@dimen/_50dp</item>
        <item name="android:layout_marginEnd">@dimen/_15dp</item>
        <item name="android:background">@color/div_line</item>
    </style>

    <dimen name="_1dp">1dp</dimen>
</resources>
