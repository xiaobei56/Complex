<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="me_function_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/base_dimen_30</item>
        <item name="android:paddingLeft">@dimen/base_dimen_30</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="me_function_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/base_dimen_30</item>
    </style>

    <style name="me_div_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_dimen_1</item>
        <item name="android:layout_marginStart">@dimen/base_dimen_100</item>
        <item name="android:layout_marginEnd">@dimen/base_dimen_30</item>
        <item name="android:background">@color/div_line</item>
    </style>

    <style name="sub_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/base_dimen_5</item>
        <item name="android:layout_marginBottom">@dimen/base_dimen_5</item>
        <item name="android:background">@color/back_white</item>
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:textSize">@dimen/text_size_sub_title</item>
    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/back_white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/base_dimen_3</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/base_dimen_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:checked">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="div_height_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_dimen_10</item>
        <item name="android:background">@color/back_tint_grey</item>
    </style>

    <style name="div_thin_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_dimen_2</item>
        <item name="android:background">@color/back_tint_grey</item>
    </style>

</resources>
