<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="me_function_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">@dimen/_30dp</item>
        <item name="android:paddingLeft">@dimen/_30dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="me_function_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/_30dp</item>
    </style>

    <style name="me_div_line">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:layout_marginStart">@dimen/_10dp</item>
        <item name="android:layout_marginEnd">@dimen/_30dp</item>
        <item name="android:background">@color/div_line</item>
    </style>

    <style name="sub_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_6dp</item>
        <item name="android:layout_marginBottom">@dimen/_6dp</item>
        <item name="android:textColor">@color/text_color_blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="list_item_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>

    <style name="list_select_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>

    <style name="radio_group_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/_2dp</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:checked">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="div_height_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_5dp</item>
        <item name="android:background">@color/div_back</item>
    </style>

    <style name="div_thin_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1dp</item>
        <item name="android:background">@color/div_back</item>
    </style>

    <style name="et_number_style">
        <item name="android:inputType">number</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/edit_text_back</item>
    </style>

    <style name="tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="tv_unit_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_grey_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="iv_arrow_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10dp</item>
        <item name="android:layout_marginBottom">@dimen/_10dp</item>
        <item name="android:layout_marginEnd">@dimen/_5dp</item>
        <item name="android:src">@mipmap/right</item>
    </style>

    <style name="ll_item_style">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="toolbar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/_4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>

</resources>
