<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rotationY="90"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin">

            <TextView
                style="@style/bottom_tab_style"
                android:layout_weight="1"
                android:drawableTop="@drawable/wk_assistance_history_selector"
                android:text="@string/text_history"
                android:textColor="@color/bottom_tab_text_color_selector" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/main_brown" />

            <TextView
                style="@style/bottom_tab_style"
                android:layout_weight="1.5"
                android:drawableTop="@drawable/wk_assistance_new_game_selector"
                android:text="新局" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/main_brown" />

            <TextView
                style="@style/bottom_tab_style"
                android:layout_weight="1"
                android:drawableTop="@drawable/wk_assistance_strategy_selector"
                android:text="攻略" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>



